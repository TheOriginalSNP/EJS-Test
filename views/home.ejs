<%- include("partials/header"); -%>
<h1>Home</h1>
<p> <%= content %> </p>
<h1>Blog Posts</h1>

<% if(posts.length <1 || posts.length === undefined) { %>
<p>There are no blog posts.</p>
<% } else { %>
<div class="singlePost">
    <% posts.forEach(function(post) { %>
    <h3><%= post.title %></h3>
    <p><%= post.content %></p>
    <% }); %>
</div>
<% } %>

<%- include("partials/footer"); -%>